<h1>Update your personal informations</h1>

<form method="post">
    <div id="data">

        <input type="text" name="name" value="{{name}}" placeholder="name" />
        <input
            type="text"
            name="surname"
            value="{{surname}}"
            placeholder="surname"
        />
        <input
            type="text"
            name="age"
            value="{{age}}"
            placeholder="age"
            id="age"
        />
        <input type="text" name="city" value="{{city}}" placeholder="city" />
        <input
            type="text"
            name="country"
            value="{{country}}"
            placeholder="country"
        />
        <input
            type="text"
            name="website"
            value="{{website}}"
            placeholder="website"
        />
        <input
            type="email"
            name="email"
            value="{{email}}"
            placeholder="email"
        />
        <input type="password" name="password" placeholder="password" />

    </div>
    <button type="submit">submit</button>

</form>